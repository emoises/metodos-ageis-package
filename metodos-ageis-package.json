{
    "type": "APL",
    "version": "1.1",
    "settings": {},
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        }],
    "resources": [
        {
            "description": "Cores predefinidas do métodos ágeis",
            "colors": {
                "amareloClaro": "#F3F9A7",
                "amareloEscuro": "#CAC531",
                "azulClaro": "#ADD5FD",
                "azulEscuro": "#5A7DFC",
                "verdeClaro": "#AAF8C8",
                "verdeEscuro": "#16C8BB",
                "delicateClaro": "#D3CCE3",
                "delicateEscuro": "#E9E4F0",
                "amareloPostIt": "#D5D000",
                "rosaPostIt": "#FFEBCD",
                "bordaPostItProjeto": "#F0FFFF"
            }
        }
    ],
    "styles": {},
    "onMount": [],
    "graphics": {},
    "commands": {},
    "layouts": {
        "barraRolamento": {
            "parameters": [
                "objetoProjetos"
            ],
            "items": [
                {
                    "when": "${payload.objeto.projetos.length > 0}",
                    "type": "Container",
                    "width": "30vw",
                    "height": "70vh",
                    "alignItems": "start",
                    "direction": "row",
                    "items": [
                        {
                            "type": "Sequence",
                            "width": "100%",
                            "height": "100%",
                            "data": "${objetoProjetos}",
                            "item": [
                                {
                                    "type": "Frame",
                                    "width": "30vw",
                                    "height": "38vh",
                                    "paddingLeft": "1vh",
                                    "backgroundColor": "@rosaPostIt",
                                    "borderColor": "@bordaPostItProjeto",
                                    "borderWidth": "0.7vh",
                                    "numbering": "normal",
                                    "spacing": "2vh",
                                    "item": [
                                        {
                                            "type": "Container",
                                            "width": "30vw",
                                            "height": "40vh",
                                            "alignItems": "center",
                                            "direction": "column",
                                            "shadowColor": "orange",
                                            "items": [
                                                {
                                                    "type": "Text",
                                                    "width": "25vw",
                                                    "paddingLeft": "0.25vw",
                                                    "color": "#1E2222",
                                                    "top": "2vh",
                                                    "fontSize": "3.2vh",
                                                    "text": "${payload.texto.projectTranslation + ' ' + data.textoPrimario}",
                                                    "fontWeight": "bold",
                                                    "letterSpacing": "0.45vh"
                                                },
                                                {
                                                    "type": "Text",
                                                    "width": "25vw",
                                                    "top": "6vh",
                                                    "color": "#1E2222",
                                                    "fontSize": "3vh",
                                                    "text": "Scrum Master: ${data.textoSecundario}",
                                                    "fontWeight": "400",
                                                    "letterSpacing": "0.45vh"
                                                },
                                                {
                                                    "type": "Text",
                                                    "width": "25vw",
                                                    "top": "9vh",
                                                    "color": "#1E2222",
                                                    "fontSize": "3vh",
                                                    "text": "${payload.texto.timeTranslation + ' ' + data.textoTerciario}",
                                                    "fontWeight": "400",
                                                    "letterSpacing": "0.45vh"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]},
        "metodosAgeisFooter": {
            "parameters": [
                "hintText"
            ],
            "items": [
                    {
                        "type": "Text",
                        "color": "@delicateEscuro",
                        "fontStyle": "italic",
                        "fontFamily": "Bookerly",
                        "fontSize": "6vh",
                        "text": "${hintText}"
                    }
                ]},
        "rolagemSprint": {
            "parameters": [
                "objeto"
            ],
            "items": [
                {
                    "type": "Container",
                    "width": "22vw",
                    "height": "32vw",
                    "alignItems": "center",
                    "paddingLeft": "0.5vw",
                    "paddingTop": "1vw",
                    "items": [
                        {
                            "type": "Sequence",
                            "width": "100%",
                            "height": "100%",
                            "alignSelf": "center",
                            "data": "${objeto}",
                            "item": [
                                {
                                    "when": "${data}",
                                    "type": "Frame",
                                    "width": "21vw",
                                    "height": "25vh",
                                    "backgroundColor": "@amareloPostIt",
                                    "borderColor": "black",
                                    "borderWidth": "0.15vw",
                                    "spacing": "0.25vh",
                                    "item": [
                                        {
                                            "type": "Container",
                                            "height": "25vh",
                                            "width": "22vw",
                                            "items": [
                                                {
                                                    "type": "Text",
                                                    "width": "21vw",
                                                    "paddingLeft": "1vw",
                                                    "paddingBottom": "1.5vh",
                                                    "color": "#1E2222",
                                                    "top": "2vh",
                                                    "fontSize": "2.5vh",
                                                    "text": "${payload.texto.projectTranslation + ' ' + data.textoPrimario}",
                                                    "fontWeight": "bold",
                                                    "letterSpacing": "0.45vh"
                                                },
                                                {
                                                    "type": "Text",
                                                    "width": "20vw",
                                                    "paddingLeft": "1vw",
                                                    "paddingBottom": "1.5vh",
                                                    "color": "#1E2222",
                                                    "top": "2vh",
                                                    "fontSize": "2.5vh",
                                                    "text": "${payload.texto.responsableTranslation + ' ' + data.textoSecundario}",
                                                    "fontWeight": "500",
                                                    "letterSpacing": "0.45vh"
                                                },
                                                {
                                                    "type": "Text",
                                                    "width": "21vw",
                                                    "paddingLeft": "1vw",
                                                    "color": "#1E2222",
                                                    "top": "2vh",
                                                    "fontSize": "2.5vh",
                                                    "text": "${payload.texto.timeTranslation + ' ' + data.textoTerciario}",
                                                    "fontWeight": "500",
                                                    "letterSpacing": "0.45vh"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]}}
}
